create table bill_tbl(Bill_ID Number(10), Consumer_ID varchar2(12) references Consumer_tbl(Consumer_ID),Billing_Period_From Date,Billing_Period_To Date,Units_Consumed Number(12),Amount Number(12,2),Bill_Date Date,Status Varchar2(20));

