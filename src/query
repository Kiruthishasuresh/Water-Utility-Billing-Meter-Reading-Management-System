CREATE TABLE meter_reading_tbl (reading_id     NUMBER PRIMARY KEY,consumer_id    VARCHAR2(12) foreign key references consumer_tbl(consumer_id), meter_number   VARCHAR2(30),
reading_date   DATE,reading_value  NUMBER,recorded_by    VARCHAR2(50));

